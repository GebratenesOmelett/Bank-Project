<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm" version="3.0">
    <description>XML Mapping file</description>
    <entity class="com.example.bankbackend.customer.CustomerSnapshot" access="FIELD">
        <table name="customers"></table>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="firstName">
                <column nullable="false"></column>
            </basic>
            <basic name="lastName">
                <column nullable="false"></column>
            </basic>
            <basic name="funds">
                <column nullable="false"></column>
            </basic>
            <basic name="password">
                <column nullable="false"></column>
            </basic>
            <basic name="email">
                <column nullable="false"></column>
            </basic>
        <many-to-many name="roleSet" fetch="LAZY">
            <join-table name="customer_roles">
                <join-column name="customer_id"></join-column>
                <inverse-join-column name="role_id"></inverse-join-column>
            </join-table>
        </many-to-many>
            <one-to-many name="transferSet" mapped-by="customer" fetch="LAZY"/>
        </attributes>
    </entity>
    <entity class="com.example.bankbackend.transfer.TransferSnapshot">
        <table name="transfers"></table>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"></generated-value>
            </id>
            <basic name="title">
                <column nullable="false"></column>
            </basic>
            <basic name="funds">
                <column nullable="false"></column>
            </basic>
            <basic name="receiverId">
                <column nullable="false"></column>
            </basic>
            <many-to-one name="customer" fetch="LAZY"/>
        </attributes>

    </entity>



</entity-mappings>